{
  "name": "R Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "args": {
      "VARIANT": "4.2"
    }
  },
  "settings": {
    "r.rterm.linux": "/usr/bin/R",
    "r.sessionWatcher": true,
    "r.lsp.path": "/usr/lib/R/bin/R"
  },
  "extensions": [
    "ikuyadeu.r",
    "reditorsupport.r-lsp",
    "ms-python.python"
  ],
  "remoteUser": "rstudio"
}
